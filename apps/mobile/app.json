{
  "expo": {
    "name": "Ambya",
    "slug": "ambya",
    "version": "1.0.0",
    "orientation": "portrait",
    "scheme": "ambya",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "icon": "./assets/app-icon.png",

    "splash": {
      "image": "./assets/splash-logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#6B2737"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.ambya.app",
      "buildNumber": "1.0.0"
    },

    "android": {
      "package": "com.ambya.app",
      "versionCode": 1,
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#6B2737"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "plugins": [
      "expo-router"
    ],

    "experiments": {
      "typedRoutes": true
    }
  }
}
